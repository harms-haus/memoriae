{
  "name": "@harms-haus/shared",
  "version": "0.1.0",
  "description": "Shared utilities for Memoriae (logger, etc.)",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/harms-haus/memoriae.git",
    "directory": "shared"
  },
  "keywords": [
    "memoriae",
    "shared",
    "utilities",
    "logger"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs && npm run build:rename-cjs",
    "build:esm": "tsc -p tsconfig.json",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:rename-cjs": "node -e \"const fs = require('fs'); if (fs.existsSync('dist-temp/index.js')) { fs.renameSync('dist-temp/index.js', 'dist/index.cjs'); fs.rmSync('dist-temp', { recursive: true, force: true }); }\"",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "bt": "npm run build && npm run test:coverage",
    "bt:watch": "npm run build && npm run test:watch"
  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "@vitest/coverage-v8": "^1.1.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  }
}

