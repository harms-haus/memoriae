{
  "name": "mother-theme",
  "version": "0.1.0",
  "description": "Memoriae theme library and React components",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "scripts": {
    "type-check": "tsc --noEmit",
    "build": "tsc",
    "examples": "vite --config vite.examples.config.ts",
    "examples:build": "vite build --config vite.examples.config.ts",
    "test": "vitest run --no-watch",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ct": "playwright test -c playwright-ct.config.ts",
    "test:ct:ui": "playwright test -c playwright-ct.config.ts --ui",
    "test:visual": "playwright test -c playwright-ct.config.ts --grep @visual"
  },
  "dependencies": {
    "lucide-react": "^0.552.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@playwright/experimental-ct-react": "^1.40.0",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/node": "^24.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.1.0",
    "jsdom": "^23.0.1",
    "playwright": "^1.40.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vitest": "^1.1.0"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
