{
  "name": "@harms-haus/memoriae-server",
  "version": "0.1.0",
  "description": "Memoriae backend API",
  "main": "dist/index.js",
  "files": [
    "dist",
    "src/db/migrations",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/harms-haus/memoriae.git",
    "directory": "backend"
  },
  "keywords": [
    "memoriae",
    "api",
    "backend",
    "express",
    "postgresql",
    "redis"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "bt": "npm run build && npm run test:coverage",
    "bt:watch": "npm run build && npm run test:watch",
    "publish": "./scripts/publish.sh",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "migrate": "NODE_OPTIONS='-r ts-node/register' knex migrate:latest --knexfile src/db/knexfile.ts",
    "migrate:rollback": "NODE_OPTIONS='-r ts-node/register' knex migrate:rollback --knexfile src/db/knexfile.ts",
    "migrate:make": "NODE_OPTIONS='-r ts-node/register' knex migrate:make --knexfile src/db/knexfile.ts"
  },
  "dependencies": {
    "@types/knex": "^0.15.2",
    "axios": "^1.13.1",
    "bullmq": "^5.3.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "fast-json-patch": "^3.1.1",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "loglevel": "^1.9.1",
    "luxon": "^3.7.2",
    "pg": "^8.11.3",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/luxon": "^3.7.1",
    "@types/node": "^20.10.6",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "@vitest/coverage-v8": "^1.6.1",
    "eslint": "^8.56.0",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  }
}
